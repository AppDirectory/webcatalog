{
  "name": "WebCatalog",
  "version": "6.0.0",
  "description": "WebCatalog is an app store with thousands of exclusive apps for your Mac and PC.",
  "main": "public/electron.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "lint": "eslint ./public ./src --ext js",
    "start": "react-scripts start",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "yarn build && electron-builder --dir",
    "dist": "yarn build && electron-builder",
    "test": "mocha ./tests"
  },
  "repository": "https://github.com/webcatalog/webcatalog",
  "author": {
    "name": "Quang Lam",
    "email": "quang.lam2807@gmail.com",
    "url": "https://quanglam.me"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "electron-is-dev": "^0.1.2",
    "electron-window-state": "^4.1.1",
    "yargs-parser": "^7.0.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.0.0",
    "chalk": "^1.1.3",
    "classnames": "^2.2.5",
    "concurrently": "^3.5.0",
    "cross-env": "^5.0.1",
    "electron": "^1.7.3",
    "electron-builder": "^19.8.0",
    "electron-builder-squirrel-windows": "^19.8.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.1.0",
    "material-ui": "^1.0.0-alpha.20",
    "material-ui-icons": "^1.0.0-alpha.19",
    "mocha": "^3.4.2",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-scripts": "^1.0.7",
    "redux": "^3.7.1",
    "redux-thunk": "^2.1.0",
    "request": "^2.81.0",
    "spectron": "^3.7.1",
    "typeface-roboto": "^0.0.29",
    "wait-on": "^2.0.2"
  },
  "optionalDependencies": {
    "windows-shortcuts": "^0.1.5"
  },
  "homepage": "./",
  "build": {
    "appId": "com.webcatalog.app",
    "directories": {
      "buildResources": "build-resources"
    },
    "linux": {
      "category": "Utilities",
      "packageCategory": "utils",
      "target": [
        "deb",
        "rpm",
        "pacman"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "extendInfo": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "com.webcatalog.app.launch",
            "CFBundleURLSchemes": [
              "webcatalog"
            ]
          }
        ]
      }
    },
    "dmg": {
      "icon": "build-resources/installerIcon.icns",
      "background": "build-resources/background.tiff",
      "iconSize": 100,
      "contents": [
        {
          "x": 164,
          "y": 182
        },
        {
          "x": 383,
          "y": 182,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "x": 550,
        "y": 315
      }
    }
  }
}
