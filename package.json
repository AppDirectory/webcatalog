{
  "name": "WebCatalog",
  "version": "5.0.0-rc",
  "description": "WebCatalog, Run any web app natively.",
  "main": "app/index.js",
  "scripts": {
    "postinstall": "install-app-deps && node src/main/libs/adblock/updateEasyList.js",
    "start": "yarn start.store",
    "start.dev": "yarn start.store.dev",
    "start.store.dev": "electron . --development=true",
    "start.store": "electron .",
    "start.shell.dev": "electron . --development=true --name=\"Hello\" --url=\"https://davidwalsh.name/demo/notifications-api.php\" --id=facebook-messenger",
    "start.shell": "electron . --id=facebook-messenger --url=http://messenger.com/ --name=Shaka",
    "dev.main": "babel src/main -d app --copy-files --watch",
    "dev.ui": "cross-env NODE_ENV=development webpack -d --watch",
    "dev": "concurrently --kill-others \"yarn dev.main\" \"yarn dev.ui\"",
    "compile.main": "babili src/main -d app --copy-files",
    "compile.ui": "cross-env NODE_ENV=production webpack -p",
    "compile": "yarn compile.main && yarn compile.ui",
    "package": "node ./packager.js",
    "lint": "eslint ./src --ext .js",
    "dist": "yarn compile && yarn package",
    "test": "mocha ./tests"
  },
  "repository": "https://github.com/webcatalog/webcatalog",
  "author": {
    "name": "Quang Lam",
    "email": "quang.lam2807@gmail.com",
    "url": "https://quanglam.me"
  },
  "license": "MIT",
  "devDependencies": {
    "@blueprintjs/core": "^1.16.0",
    "algoliasearch": "^3.22.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babili": "^0.0.12",
    "bourbon": "^4.3.4",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.16",
    "concurrently": "^3.4.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.1",
    "electron": "^1.6.6",
    "electron-builder": "^17.1.2",
    "electron-builder-squirrel-windows": "^17.2.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "immutable": "^3.8.1",
    "lodash.camelcase": "^4.3.0",
    "mocha": "^3.3.0",
    "node-sass": "^4.5.2",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-addons-css-transition-group": "^15.5.2",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "react-share": "^1.13.2",
    "redux": "^3.6.0",
    "redux-batched-actions": "^0.2.0",
    "redux-thunk": "^2.1.0",
